<% layout("/layouts/boilerplate") %>

<div class="row mt-4"> 
  <div class="col-6 offset-2"> 
    <h1>Login</h1>

    <form method="POST" action="/login" class="mt-4 needs-validation" novalidate>

      <!-- Username -->
      <div class="mb-3"> 
        <label for="username" class="form-label">Username</label> 
        <input id="username" name="username" type="text" class="form-control" required />
      </div>

      <!-- Password -->
      <div class="mb-3"> 
        <label for="password" class="form-label">Password</label> 
        <input id="password" name="password" type="password" class="form-control" minlength="6" required />
        <div class="invalid-feedback">Password must be at least 6 characters long</div>

        <div class="d-flex justify-content-end mt-1">
          <a href="/login/reset" class="text-decoration-none small text-primary">
            Forgot password?
          </a>
        </div>
      </div>

      <button class="btn btn-success">Login</button>  

      <div class="text-center my-3 text-muted">or</div>

      <!-- Signup Prompt -->
      <div class="text-center">
        <span class="me-1">New here?</span> 
        <a href="/signup" class="text-decoration-none fw-semibold text-info">
          Create an account
        </a>
      </div>

    </form>
  </div>
</div>
